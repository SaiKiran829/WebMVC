            </li>
    </ul>


<div class="heading"><h1>Employees in company</Table></h1><br /></div>  
<div id = "table1"> <table class="table table-dark table-striped table-hover ">
    <tr>  
        <th>Employee Id </th>  
        <th>First Name </th>  
        <th>Last Name </th>  
        <th>Email</th>  
        <th>Mobile Number</th>  
        <th>Address</th>  
        <th>Role Id</th>  
        <th>Role Name</th>
        <th>Actions</th>
    </tr>  
    @foreach (var d in Model)
    {  
        <tr>  
            <td>@d.EmployeeId</td>  
            <td>@d.FirstName</td>  
            <td>@d.LastName</td>  
            <td>@d.EmailId</td>  
            <td>@d.MobileNumber</td>  
            <td>@d.Address</td>  
            <td>@d.RoleId</td>
            <td>@d.Role.RoleName</td>
            <td><button class="updateButton">UPDATE</button>  <button class="deleteButton">DELETE</button></td>
        </tr>
    }
</table>
  </div>
    <style>
        body {
            background: #060c21;
        }
        
        .deleteButton{
            background-color: indianred;
            border-radius: 10px;
            transition: 0.7s;
            
        }

        .deleteButton:hover{
      background-color: crimson;
      transition: 0.7s;
  }

  .updateButton{
            background-color: aqua;
            border-radius: 10px;
            transition: 0.7s;
  }
      .updateButton:hover{
        background-color: mediumspringgreen;
      transition: 0.7s;
      }

      #table1{
        margin-left: 10%;
        margin-right:10%;
      }

      .heading{
          color:aqua;
          padding-top: 3%;
          padding-left: 37%;
      }

        </style>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous">

function openNav() {
        document.getElementById("mySidebar").style.width = "250px";
        document.getElementById("main").style.marginLeft = "250px";
      }
      
      function closeNav() {
        document.getElementById("mySidebar").style.width = "0";
        document.getElementById("main").style.marginLeft= "0";
      }
    </script>
</body>
</html>